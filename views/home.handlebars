    </nav>
    <div class="jumbotron">
        <div class="banner">
            <h1>NPR News Scraper</h1>
        </div>
    </div>
    <div class="container-fluid">
    {{#if articles}}
        {{#each articles}}
                <div class="panel panel-default saved">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-10">
                                <p class="article-header"><a href="{{this.link}}" target="_blank">{{this.title}}</a></p>
                            </div>
                            <div class="col-md-2">
                                {{#if this.saved}}
                                    <p class="save-btn"><span class="glyphicon glyphicon-ok"></span> Saved!</p>
                                {{else}}
                                  <button type="button" class="btn btn-warning save-btn" data-id="{{this.id}}">Save Article</button>
                                {{/if}} 
                            </div>
                        </div>      
                    </div>
                    
                    <div class="panel-body">
                        <p>{{this.summary}}</p>
                    </div>
                </div>
        {{/each}}
    {{else}}
        <div class="panel panel-default no-saved">
            <div class="panel-body">
                <h4>No articles currently available. Please click on the Scrape New Articles button to display your articles.</h4>
            </div>
        </div>
    
    {{/if}} 

    </div>
    <!-- Modal -->
    <div class="modal fade" id="scrapeModal" tabindex="-1" role="dialog" aria-labelledby="scrapeModal">
        <div class="modal-dialog  modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4>New Articles Scraped</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>