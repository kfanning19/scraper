    <div class="container-fluid">
    {{#if articles}}
        {{#each articles}}
                <div class="panel panel-default saved">
                    <div class="panel-heading">
                    {{#if this.saved}}
                        <p class="save-btn"><span class="glyphicon glyphicon-ok"></span> Saved!</p>
                    {{else}}
                        <h3>{{this.title}}</h3>
                                <form action="/save/articles/{{this._id}}" method="POST">
                                <input type="hidden" name="id" value="{{this._id}}">
                                <button type="submit" class="btn btn-danger save-btn">Save Article</button>
                            </form>
                    }
                    }
                    </div>
                    {{/if}}
                    <div class="panel-body">
                        <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                    </div>
                </div>
        {{/each}}
    {{else}}
        <div class="panel panel-default no-saved">
            <div class="panel-body">
                <h4>No articles currently available. Please click on the Scrape New Articles button to display your articles.</h4>
            </div>
        </div>
    
    {{/if}} 

